<% if book.favorited_by?(current_user) %>

        <%=link_to book_favorites_path(book.id), method: :delete, remote: true, class: "fa fa-heart unlike-btn" do %>
        <%= book.favorites.count %>
      <% end %>


      <% else %>

        <%=link_to book_favorites_path(book.id), method: :post, remote: true, class: "fa fa-heart like-btn" do %>
        <%= book.favorites.count %>
        <% end %>


<% end %>